@model web.Models.AddProductModel;
@{
    ViewData["Title"] = "Add product";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm("addProductSubmit", "Home", FormMethod.Post))
        {
            <h4>Add product that you are interested in.</h4>
            <h6>
                Supported web stores:
                <a href="https://www.bigbang.si/">Big Bang</a> | 
                <a href="https://edigital.si/">Extreme Digital</a> | 
                <a href="https://www.mimovrste.com/">mimovrste</a>
            </h6>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label for="Store URL">Store URL</label>
                @Html.TextBoxFor(model => model.url, new {@class = "form-control"})
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Add product</button>
                <a  asp-action="Index">Cancel</a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
