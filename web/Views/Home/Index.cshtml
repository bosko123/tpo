@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@model IEnumerable<web.Models.Product>;
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Image
            </th>
            <th>
                Product
            </th>
            <th>
                Price
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    
    @{
        var token = HttpContextAccessor.HttpContext.Session.GetString("token");
        if (token != null && Model != null) {
            foreach (var product in Model)
            {
                <tr>
                    <td>
                        <img src="@product.image" height="50">
                    </td>
                    <td>
                        <br><a asp-action="Details" asp-route-id="@product.id">@product.name</a>
                    </td>
                    <td>
                        @product.price€
                    </td>
                    <td>
                        <a asp-action="RemoveProduct" asp-route-id="@product.id">Remove</a>
                    </td>
                </tr>
            }
        }
    }
    </tbody>
</table>
</div>
